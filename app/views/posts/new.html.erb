<h1> New Post </h1>
<h2> Share Your Experiences! </h2>

<%= form_for :post, url: posts_path do |f| %>
	<% if @post.errors.any? %>
		<div id="error_explanation">
			<h3>
				<%= pluralize(@post.errors.count, "error") %> prohibited this article from being saved:
			</h3>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>
	
	<p>
		<%= f.label :submitted_by %><br>
		<%= f.text_field :submitted_by %>
	</p>

	<p>
		<%= f.label :post %><br>
		<%= f.text_area :post %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>

<%= link_to 'Back', posts_path %>
