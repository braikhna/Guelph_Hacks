<h1>Current Posts</h1>

<%= link_to 'New Post', new_post_path %>
<table>
	<tr>
		<th>Title</th>
		<th>Submitted By</th>
		<th>Post</th>
		<th colspan="3"></th>
	</tr>

	<% @posts.each do |post| %>
		<tr>
			<td><%= post.title %></td>
			<td><%= post.submitted_by %></td>
			<td><%= post.post %></td>
			<td><%= link_to 'Show', post_path(post) %></td>
		</tr>
	<% end %>
</table>
